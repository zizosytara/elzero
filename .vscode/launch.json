{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {   "cwd": "${workspaceFolder}",
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Debug C++ Executable",
            "program": "${workspaceFolder}/${input:exeToDebug}",
            "stopAtEntry": true,
            "preLaunchTask": "C/C++: g++.exe build active file"
        }
    ],
    "inputs": [
        {
            "id": "exeToDebug",
            "type": "pickString",
            "description": "Select the executable to debug",
            "options": [
                "Doubly_linked_list.exe",
                "elzero.exe",
                "snakeGame.exe",
                "temporary.exe",
                "stackArray.exe",
                "stackList.exe",
            ]
        }
    ]
}